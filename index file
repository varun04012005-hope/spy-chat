<body>
    <div class="scanlines"></div>
    
    <div class="container">
        <div class="header">
            <h1>◢ CLASSIFIED COMMUNICATIONS ◣</h1>
            <div class="status">● SECURE CONNECTION ACTIVE</div>
        </div>

        <div class="login-screen" id="loginScreen">
            <h2 style="margin-bottom: 30px;">AGENT IDENTIFICATION</h2>
            <input type="text" id="agentName" placeholder="ENTER CODENAME" maxlength="20">
            <button onclick="login()">AUTHENTICATE</button>
        </div>

        <div class="chat-interface" id="chatInterface">
            <div class="messages" id="messages"></div>
            <div class="input-area">
                <input type="text" id="messageInput" placeholder="ENTER ENCRYPTED MESSAGE..." onkeypress="if(event.key==='Enter') sendMessage()">
                <button onclick="sendMessage()">TRANSMIT</button>
            </div>
        </div>
    </div>

    <script>
        let currentAgent = '';
        let messageCheckInterval;

        async function login() {
            const name = document.getElementById('agentName').value.trim();
            if (name) {
                currentAgent = name;
                document.getElementById('loginScreen').classList.add('hidden');
                document.getElementById('chatInterface').style.display = 'flex';
                loadMessages();
                startMessagePolling();
            }
        }

        async function loadMessages() {
            try {
                const result = await window.storage.list('msg:', true);
                if (result && result.keys) {
                    const messagesDiv = document.getElementById('messages');
                    messagesDiv.innerHTML = '';
                    
                    const sortedKeys = result.keys.sort();
                    for (const key of sortedKeys) {
                        const msgResult = await window.storage.get(key, true);
                        if (msgResult) {
                            const msg = JSON.parse(msgResult.value);
                            displayMessage(msg);
                        }
                    }
                    scrollToBottom();
                }
            } catch (error) {
                console.log('Initializing secure channel...');
            }
        }

        function startMessagePolling() {
            messageCheckInterval = setInterval(loadMessages, 2000);
        }

        async function sendMessage() {
            const input = document.getElementById('messageInput');
            const text = input.value.trim();
            
            if (text && currentAgent) {
                const message = {
                    agent: currentAgent,
                    text: text,
                    timestamp: Date.now()
                };
                
                try {
                    await window.storage.set(`msg:${message.timestamp}`, JSON.stringify(message), true);
                    input.value = '';
                    await loadMessages();
                } catch (error) {
                    console.error('Transmission failed:', error);
                }
            }
        }

        function displayMessage(msg) {
            const messagesDiv = document.getElementById('messages');
            const messageDiv = document.createElement('div');
            messageDiv.className = 'message';
            
            const date = new Date(msg.timestamp);
            const timeStr = date.toLocaleTimeString();
            
            messageDiv.innerHTML = `
                <div class="message-header">[${timeStr}] AGENT: ${msg.agent}</div>
                <div class="message-text">${escapeHtml(msg.text)}</div>
            `;
            
            messagesDiv.appendChild(messageDiv);
        }

        function scrollToBottom() {
            const messagesDiv = document.getElementById('messages');
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
    </script>
</body>
</html>
